{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "CommonJS",
        "target": "ES2018",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM",
            "DOM.Iterable"
        ],
        "inlineSources": false,
        "inlineSourceMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}